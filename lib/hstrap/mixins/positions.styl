// Vertical align in a fixed height container
inline-block-valign(childs = '> *') {
  &:before,
  {$childs} {
    display: inline-block;
    vertical-align: middle;
  }

  &::before {
    content: '';
    width: 0;
    height: 100%;
  }
}

// Absolute centering with variable size
// See http://css-tricks.com/centering-percentage-widthheight-elements/
transform-center() {
  position: absolute;
  left: 50%;
  top: @left;
  transform: translate(-50%, -50%);
}

flex-center() {
  display: flex;
  align-items: center;
  justify-content: center;
}

// flex box row
flex-row(childs = '> *', gutter = $h-gutter) {
  display: flex;
  align-content: stretch;
  flex-direction: row;
  {childs} {
    flex: 1 1 1%;
    margin-right: gutter;
    &:last-child {
      margin-right: 0;
    }
  }
}
