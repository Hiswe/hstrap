@import 'nib'
@import '../values'

// Convert px to em, according to fs reference
px2em(px, ref = $h-fs)
  1em * px / ref

// Scale em relative to an em size
em2em(em, ref = 1)
  em / ref

// Change the way the browser smooth the font
// ! not working on FFâ€¦
crisp-font-smoothing()
  -webkit-font-smoothing antialiased

// Fix conflict with saturate() stylus functions
css-filter(properties)
  vendor('filter', unquote(properties), only: webkit moz ms official)

// Add alpha chanel to a color
blanc(opacity = 0.5)
  rgba(#FFF, opacity)

noir(opacity = 0.5)
  rgba(#000, opacity)

// Tile the background from borders
bg-cover()
  background-size cover
  background-clip border-box
  background-origin border-box

// flex box row
flex-row()
  display flex
  align-content stretch
  flex-direction row
