@import 'nib'
@import '../lib/hstrap/mixins/index'
@import '../lib/hstrap/values'

$example-shadow = inset 0 0 4px noir(.15)
$menu-height    = px2em(32)
$width          = 50em

html, body
  padding 0; margin 0

html
  background linear-gradient(top, #fff, #ececec) fixed
  font-family 'Helvetica', 'arial', 'sans-serif'
body
  background transparent

a.selected
  color $h-blue

// Top menu
.hs-menu
  background #262626
  margin 0
  padding 2em 0
  border-bottom 1px solid white
  border-top px2em(4) solid $h-pink

  h1
    color $h-pink
    font-family 'hiso_dark', Helvetica, sans-serif
    font-weight normal
    margin .25em 0
    text-shadow 2px 2px 0 noir(.25)
    font-size 4em
    text-align left
    margin-bottom .25em

  h4
    color $h-dark-grey
    text-shadow 1px 1px 0 noir(.25)
    letter-spacing .25em
    text-indent .75em

  ul
    text-align right
    padding 0

  li, a
    display inline-block

  li
    padding-top 2em

  a
    padding .25em .5em

.hs-small-menu
  position relative
  z-index 3
  padding .25em 0 0

  h1
    font-size 2em
  h4
    display none
  li
    padding-top 0

.hs-title
  font-family 'hiso_dark', Helvetica, sans-serif
  font-weight normal
  font-size 2.5em

// Home main banner
.hs-submenu
  width 9em
  margin 0 0 0 $h-gutter
  padding 0
  position fixed
  z-index 2
  top 0
  left 100%
  margin-left -(@width + 1em)

  .h-box
    padding-top 6em
    border-top none

  ul, li
    list-style none
    margin 0

  a
    padding .25em 1em
    display block

.container
  width $width
  margin 0 auto

  .hs-menu &
    margin 0 auto


  > h1
    margin 1em 0 .5em
    color $h-pink
    text-shadow 2px 2px 0 noir(.25)


section > h2
  margin 1em 0 .5em
  color $h-pink
  font-family 'hiso_dark', Helvetica, sans-serif
  font-weight normal
  font-size 2.5em
  crisp-font-smoothing()
  text-shadow -1px -1px 0 noir(.25), 1px 1px 0 white
  position relative

  small
    position absolute
    right 100%; top 20%
    margin-right .5em
    font-family Helvetica, arial, sans-serif
    font-size .5em
    color #ececec; text-shadow none
    font-weight normal
    background noir(.2)
    padding .25em .5em
    transform-origin top right
    transform skewY(-27deg)

table
  width 100%

th
  text-align left

ul.h-row
  padding 0
  margin 0
li.h-col
  list-style none

section
  margin-bottom 1em
  .h-row + .h-row
    margin-top 1em

  .h-col
    padding 1em
    text-align center
  .h-col:nth-child(1)
    background noir(.6)
  .h-col:nth-child(2)
    background noir(.5)
  .h-col:nth-child(3)
    background noir(.4)
  .h-col:nth-child(4)
    background noir(.3)
  .h-col:nth-child(5)
    background noir(.2)

  + h4
    margin 1em 0 .25em

  table&
    width 100%
    border-spacing .1em

    th, td
      padding .5em

    th
      font-weight bold

.notice
  font-family Helvetica, arial, sans-serif
  font-style italic
  font-size $h-fs
  color #AAA
  text-shadow none

dl
  margin-bottom -.5em

dt, dd
  display inline-block
  vertical-align top
  width 35%
  box-sizing border-box
  padding .25em
  margin-bottom .5em

dt
  background rgba($h-light-pink, .25)

dd
  width 64%
  padding-left 1em
  margin-left -4px

.danger
  color $h-pink
  display block

  &:before
    content '! '

aside.h-popover
  position relative

.hs-box
  h-box()
  h-box-inset()
  background-image embedurl('media/stripe_a028efdbf39d1d58806f780f3cc1d323.png')
