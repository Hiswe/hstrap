  font-family: Helvetica, arial, sans-serif;
  font-style: italic;
  font-size: $h-fs;
  color: #AAA;
  text-shadow: none;
}

.danger
  color $h-pink
  display block

  &:before
    content '! '


.hs-box {
  background: white;

  .hs-box {
    margin-top: .5em;
    background-image: none;
    background: none;
  }

  +mq('small') {
    h-box();
    h-box-inset();
    background-image: embedurl('media/stripe_a028efdbf39d1d58806f780f3cc1d323.png');
    .hs-box {
