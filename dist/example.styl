@import 'nib'
@import './local-config'
@import '../lib/hstrap'

$example-shadow = inset 0 0 4px noir(.15)
$menu-height    = px2em(32)
$width          = 50em

html, body
  padding 0; margin 0

html
  background linear-gradient(top, #fff, #ececec) fixed
  font-family 'Helvetica', 'arial', 'sans-serif'
body
  background transparent

a.selected
  color $h-blue

// Top menu
.hs-menu
  background #262626
  margin 0
  padding 2em 0
  border-bottom 1px solid white
  border-top px2em(4) solid $h-pink

  .hs-master-head
    width 20.25em
    flex 0

  h1

    font-family 'hiso-bright', Helvetica, sans-serif
    font-weight normal
    margin .25em 0
    text-shadow 2px 2px 0 noir(.25)
    font-size 4em
    text-align left
    margin-bottom .25em
    crisp-font-smoothing()

    a
      color $h-pink

  h4
    color $h-dark-grey
    text-shadow 1px 1px 0 noir(.25)
    letter-spacing .25em
    text-indent .75em

  ul
    text-align right
    padding 0

  li, a
    display inline-block

  li
    padding-top 2em

    a
      padding .25em .5em

.hs-small-menu
  position relative
  z-index 3
  padding .25em 0 0

  h1
    font-size 2em
  h4
    display none
  li
    padding-top 0

.hs-title
  font-family 'hiso-dark', Helvetica, sans-serif
  font-weight normal
  font-size 2.5em

// Home main banner
.hs-submenu
  width 9em
  margin 0 0 0 $h-gutter
  padding 0
  position fixed
  z-index 2
  top 0
  left 100%
  margin-left -(@width + 1em)

  .h-box
    padding-top 6em
    border-top none

  ul, li
    list-style none
    margin 0

  a
    padding .25em 1em
    display block

.container
  width $width
  margin 0 auto

  .hs-menu &
    margin 0 auto


  > h1
    margin 1em 0 .5em
    color $h-pink
    text-shadow 2px 2px 0 noir(.25)


section > h2
  margin 1em 0 .5em
  color $h-pink
  font-family 'hiso-dark', Helvetica, sans-serif
  font-weight normal
  font-size 2.5em
  crisp-font-smoothing()
  text-shadow -1px -1px 0 noir(.25), 1px 1px 0 white
  position relative

  small
    position absolute
    right 100%; top 20%
    margin-right .5em
    font-family Helvetica, arial, sans-serif
    font-size .5em
    color #ececec; text-shadow none
    font-weight normal
    background noir(.2)
    padding .25em .5em
    transform-origin top right
    transform skewY(-27deg)

table
  width 100%

th
  text-align left

ul.h-row
  padding 0
  margin 0
li.h-col
  list-style none

section
  margin-bottom 1em
  .h-row + .h-row
    margin-top 1em

  .h-col
    padding 1em
    text-align center
  .h-col:nth-child(1)
    background noir(.6)
  .h-col:nth-child(2)
    background noir(.5)
  .h-col:nth-child(3)
    background noir(.4)
  .h-col:nth-child(4)
    background noir(.3)
  .h-col:nth-child(5)
    background noir(.2)

  + h4
    margin 1em 0 .25em

  table&
    width 100%
    border-spacing .1em

    th, td
      padding .5em

    th
      font-weight bold

.notice
  font-family Helvetica, arial, sans-serif
  font-style italic
  font-size $h-fs
  color #AAA
  text-shadow none

dl
  margin-bottom -.5em

dt, dd
  display inline-block
  vertical-align top
  width 35%
  box-sizing border-box
  padding .25em
  margin-bottom .5em

dt
  background rgba($h-light-pink, .25)

dd
  width 64%
  padding-left 1em
  margin-left -4px

  ul
    margin 0
    padding 0
    list-style none

.danger
  color $h-pink
  display block

  &:before
    content '! '

aside.h-popover
  position relative

.hs-box
  h-box()
  h-box-inset()
  background-image embedurl('media/stripe_a028efdbf39d1d58806f780f3cc1d323.png')

.easing-demo,
.easing-demo li,
.easing-demo p
  reset-box-model()
  list-style none

.easing-demo li
  padding .85em 0

  p, .easing-test
    display inline-block

  p
    font-weight bold
    width 20%
    padding-right 1em
    cursor pointer
    text-align right

  .easing-test
    position relative
    width 300px
    margin-top .5em
    border 1px solid noir(.15)
    border-width 1px 0
    perspective 300px

    .easing-cursor
      width 1.5em; height 1.5em
      display block
      margin -(@height/2) 0 0 -(@width/2)
      absolute top left
      background $h-blue

  &:hover
    p
      color $h-pink

    .easing-cursor
      transform translate3d(300px, 0 , 0)

.easing-cursor
  transition-property   transform
  transition-duration   1.5s

  .linear &
    transition-timing-function h-ease("linear")
  .ease &
    transition-timing-function h-ease("ease")
  .ease-in &
    transition-timing-function h-ease("ease-in")
  .ease-out &
    transition-timing-function h-ease("ease-out")
  .ease-in-out &
    transition-timing-function h-ease("ease-in-out")
  .easeInQuad &
    transition-timing-function h-ease("easeInQuad")
  .easeInCubic &
    transition-timing-function h-ease("easeInCubic")
  .easeInQuart &
    transition-timing-function h-ease("easeInQuart")
  .easeInQuint &
    transition-timing-function h-ease("easeInQuint")
  .easeInSine &
    transition-timing-function h-ease("easeInSine")
  .easeInExpo &
    transition-timing-function h-ease("easeInExpo")
  .easeInCirc &
    transition-timing-function h-ease("easeInCirc")
  .easeInBack &
    transition-timing-function h-ease("easeInBack")
  .easeOutQuad &
    transition-timing-function h-ease("easeOutQuad")
  .easeOutCubic &
    transition-timing-function h-ease("easeOutCubic")
  .easeOutQuart &
    transition-timing-function h-ease("easeOutQuart")
  .easeOutQuint &
    transition-timing-function h-ease("easeOutQuint")
  .easeOutSine &
    transition-timing-function h-ease("easeOutSine")
  .easeOutExpo &
    transition-timing-function h-ease("easeOutExpo")
  .easeOutCirc &
    transition-timing-function h-ease("easeOutCirc")
  .easeOutBack &
    transition-timing-function h-ease("easeOutBack")
  .easeInOutQuad &
    transition-timing-function h-ease("easeInOutQuad")
  .easeInOutCubic &
