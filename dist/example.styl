$c-bg           = #ececec;

// media queries mixin
mq(size) {
  $small = 48em; // 768
  $medium = 52em; // 832
  $large = 72.5em; // 1160

  // mobile first
  if (size == 'small') {
    @media screen and (min-width: $small) {
      {block};
    }
  } else if (size == 'medium') {
    @media screen and (min-width: $medium) {
      {block};
    }
  } else if (size == 'large') {
    @media screen and (min-width: $large) {
      {block};
    }
  // desktop first
  } else if (size == '<small') {
    @media screen and (max-width: $small) {
      {block};
    }
  } else if (size == '<medium') {
    @media screen and (max-width: $medium) {
      {block};
    }
  } else if (size == '<large') {
    @media screen and (max-width: $large) {
      {block};
    }
  } else {
    {block}
  }
}

html,
body {
  padding: 0;
  margin: 0;
}

html {
  background: $c-bg;
  font-family: 'Helvetica', 'arial', 'sans-serif';
}

body {
  background: transparent;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

+mq('small') {
  .container {
      width: $width;
      margin: 0 auto;

    .hs-menu & {
      margin: 0 auto;
    }

    > h1 {
      margin: 1em 0 .5em;
      color: $h-pink;
      text-shadow: 2px 2px 0 noir(.25);
    }
  }
}


a.selected {
  color: $h-blue;
}

///////////
// TOP MENU
///////////

.hs-menu {
  background: #262626;
  margin: 0;
  padding: 2em 0;
  position: relative;

  h1 {
    font-family: 'hiso-bright', Helvetica, sans-serif;
    font-weight: normal;
    padding: .25em 0;
    margin: 0;
    text-shadow: 2px 2px 0 noir(.25);
    font-size: 4em;
    text-align: left;
    crisp-font-smoothing();
    text-align: center;

    a {
      color: $h-pink;

      &.toggle-menu {
        rem-fs(22);
        color: $h-blue;
        position: absolute;
        top: .25em;
        left: .25em;
        line-height: .75;
      }
    }
  }

  h4 {
    text-align: center;
    color: $h-dark-grey;
    text-shadow: 1px 1px 0 noir(.25);
    letter-spacing: .25em;
    text-indent: .75em;
  }

  +mq('medium') {
    border-top: 4px solid $h-pink;

    h1,
    h4 {
      text-align: left;
    }

    .toggle-menu {
      display: none;
    }
  }
}

#menu {
  background: #262626;
  padding: 0;
  margin: 0;

  li,
  a {
    display: block;
  }

  li {
    padding: 0;
  }

  a {
    padding: 1em;
  }

  &:target {
    transform: translate(0, 0);
  }
  +mq('<medium') {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    transform: translate(-100%, 0);
  }

  +mq('medium') {
    li:first-child {
      display: none;
    }

    li,
    a {
      display: inline-block;
    }
    li {
      padding-top: 2em;
    }
  }
}

.hs-small-menu
  position relative
  z-index 3
  padding .25em 0 0

  h1
    font-size 2em
  h4
    display none
  li
    padding-top 0

// Home main banner
.hs-submenu {
  display: none;
}

+mq('large')
  .hs-submenu
    display block
    width 9em
    margin 0 0 0 $h-gutter
    padding 0
    position fixed
    z-index 2
    top 0
    left 100%
    margin-left -(@width + 1em)

    .h-box
      border-top none

    ul, li
      list-style none
      margin 0

    li:first-child
      padding 1em 0

    a, strong
      padding .25em 0
      display block

///////////
// HOMEPAGE
///////////

.home-section {
  padding: 0;

  p {
    padding: 0 $gutter;
  }
}

.hs-title {
  font-family: 'hiso-dark', Helvetica, sans-serif;
  font-weight: normal;
  font-size: 2.5em;
  margin: 0 0 .75em;
  padding: .5em 0;

  +mq('<small') {
    background: white;
    text-align: center;
  }
}

///////////
// TITLES
///////////

section > h2 {
  margin: 0;
  color: black;
  background: $h-pink;
  crisp-font-smoothing();
  position: relative;
  padding: $gutter 0 0 $gutter;
  text-align: left;

  span {
    font-family: 'hiso-dark', Helvetica, sans-serif;
    font-weight: normal;
    rem-fs($h-fs * 1.5);
    line-height: 1;
    vertical-align: baseline;
  }

  small {
    font-family: Helvetica, arial, sans-serif;
    rem-fs($h-fs * .75);
    color: noir(.5);
    text-shadow: none;
    font-weight: normal;
    vertical-align: text-top;

    &::before {
      content: '(';
    }
    &::after {
      content: ')';
    }
  }
}

///////////
// PROPERTY + DESCRIPTION BLOCK
///////////

dl {
  margin: 0;
}

dt,
dd {
  padding: $gutter;

}
dt {
  margin: 0;
  position: relative;
}

dd {
  margin: 0 0 .5em;
}

+mq('<small') {
  dt::after {
    stem(direction: 'bottom', color: white);
    position: absolute;
    bottom: -.5em;
    left: $gutter;
    transform: translateX(-50%);
  }
  dd {
    background: $c-bg;
  }

}


+mq('small') {
  dt,
  dd {
    display: inline-block;
    vertical-align: top;
    width: 35%;
  }

  dt {
    padding-left: 1em;
    background: rgba($h-light-pink, .25);
  }

  .hs-box-force-two-line {
    dt {
      background: none;
      display: block;
    }
    dd {
      width: auto;
      display: block;
    }
  }

  dd {
    width: 64%;
    padding-left: 1em;
    margin-left: -4px;

    ul {
      margin: 0;
      padding: 0;
      list-style: none;
    }
  }
}

table {
  width: 100%;
}

th {
  text-align: left;
}

.h-row {
  margin: 0;

  +mq('<small') {
    section & {
      padding: $gutter;
    }
  }

  +mq('small') {
    padding: 0;
    flex-row();
  }
}

li.h-col {
  list-style: none;
}

section {

  +mq('small') {
    .h-row + .h-row {
      margin-top: 1em;
    }
  }

  .h-col {
    padding: 1em;
    text-align: center;
  }
  .h-col:nth-child(1) {
    background: noir(.6);
  }
  .h-col:nth-child(2) {
    background: noir(.5);
  }
  .h-col:nth-child(3) {
    background: noir(.4);
  }
  .h-col:nth-child(4) {
    background: noir(.3);
  }
  .h-col:nth-child(5) {
    background: noir(.2);
  }
  h4 {
    padding: 1em $gutter;
    margin: 0;
    border-top: 1px solid noir(.1);

    +mq('small') {
      padding-left: 0;
      padding-right: 0;
    }
  }
}

// Buttons container
table.hs-box {
  width: 100%;
  border-spacing: .1em;

  th,
  td {
    padding: .5em;
  }

  th {
    font-weight: bold;
  }

  +mq('<small') {
    thead {
      display: none;
    }
    tr {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    td {
      &:last-child {
        order: -1;
        width: 100%;
        border: solid ;
        border-color: noir(.05) noir(0) noir(.15) noir(0);
        border-width: 1px 0;
      }
    }
  }

  +mq('small') {
    span {
      color: noir(0);
    }
  }
}

