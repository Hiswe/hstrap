@import 'nib'
@import '../lib/hstrap/mixins'
@import '../lib/hstrap/values'

$example-shadow = inset 0 0 4px black(.15)

html
  background linear-gradient(top, #fff, #ececec) fixed
  font-family 'Helvetica', 'arial', 'sans-serif'
body
  background transparent

menu
  position fixed
  right 3em; top -($h-buttons-depth * 2)
  width 9em
  a
    padding .25em 1em
    display block

.container
  width 50em
  margin 0 auto

  > h1
    margin 1em 0 .5em
    color $h-pink
    text-shadow 2px 2px 0 black(.25)



section > h2
  margin 1em 0 .5em
  color $h-pink
  text-shadow -1px -1px 0 black(.25), 1px 1px 0 white

table
  width 100%

section
  margin-bottom 1em
  .h-row + .h-row
    margin-top 1em

  .h-col
    padding 1em
    text-align center
  .h-col:nth-child(1)
    background black(.6)
  .h-col:nth-child(2)
    background black(.5)
  .h-col:nth-child(3)
    background black(.4)
  .h-col:nth-child(4)
    background black(.3)
  .h-col:nth-child(5)
    background black(.2)

  + h4
    margin 1em 0 .25em

  table&
    width 100%
    border-spacing .1em

    th, td
      padding .5em

    th
      font-weight bold

.notice
  font-style italic
  font-size $h-fs
  color #AAA
  text-shadow none
