@import 'nib'
@import '../lib/hstrap/mixins'
@import '../lib/hstrap/values'

$example-shadow = inset 0 0 4px black(.15)

html
  background linear-gradient(top, #fff, #ececec) fixed
  font-family 'Helvetica', 'arial', 'sans-serif'
body
  background transparent

menu
  position fixed
  right 3em; top 0
  padding 2em 0
  border-radius 0 0 .5em .5em
  background white
  box-shadow $example-shadow
  width 9em
  a
    padding .25em 1em
    display block

.container
  width 50em
  margin 0 auto

section > h2
  margin 1em 0 .5em
  color $h-pink
  text-shadow -1px -1px 0 black(.25), 1px 1px 0 white

.example
  border-radius .5em
  padding 1em
  background white
  box-shadow $example-shadow

  + h4
    margin 1em 0 .25em

  table&
    width 100%
    border-spacing .1em

    th, td
      padding .5em

    th
      font-weight bold



.notice
  font-style italic
  color #AAA