  margin      0
  list-style  none

.easing-demo
  padding 0 1em

.easing-demo li
  padding: .85em 0 1.25em;

  p
    font-weight bold
    margin-bottom 1em
    padding-right 1em
    cursor pointer

  .easing-test
    position relative
    border 1px solid noir(.15)
    border-width 1px 0

    .easing-cursor
      width 1.5em
      height 1.5em
      display block
      margin -(@height/2) 0 0 -(@width/2)
      position absolute
      top 0
      left 0
      background $h-blue

  &:hover
